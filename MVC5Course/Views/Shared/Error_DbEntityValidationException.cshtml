@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
	var ex = Model.Exception as System.Data.Entity.Validation.DbEntityValidationException;
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">/@Model.ControllerName/@Model.ActionName 實體模型驗證失敗</h2>
<h2 class="text-danger">@ex.Message</h2>
<ol>
	@foreach (var Entity in ex.EntityValidationErrors)
	{
		<li>
			實體模型: @Entity.Entry.GetType().Name<br />
		</li>
		foreach (var error in Entity.ValidationErrors)
		{
			<li>
			 	
				<ul>
					<li>屬性名稱 : @error.PropertyName</li><br />
					<li>錯誤訊息 :@error.ErrorMessage</li><br />
				</ul>
			</li>
		}
	}
</ol>

